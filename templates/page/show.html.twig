{% extends 'base.html.twig' %}

{% block title %}Homepage
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,200..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	<style>
		body {
			font-family: 'Poppins', sans-serif;
		}
		h1,
		h2,
		h3,
		h4,
		h5,
		h6 {
			font-family: 'Bricolage Grotesque', serif;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="flex flex-col gap-4 m-10 p-4 border-2 border-slate-400 rounded-lg">
		<h1 class="text-3xl font-bold">{{ post.title }}
			{{ post.title }}
		</h1>
		<p class="">Published on
			{{ post.publishedAt|date('d-m-Y') }}
			by
			{{ post.author.fullName }}</p>
		<p class="txtte-sm text-slate-300 italic">Categroy:
			{{ post.category.name }}
			| Tags:
			{% for label in post.labels %}
				{{ label.name }}
			{% endfor %}
		</p>
		<div class="my-4 bg-slate-50 p-4 rounded-md text-slate-900">
			{{ post.content|raw }}
		</div>
	</div>
{% endblock %}

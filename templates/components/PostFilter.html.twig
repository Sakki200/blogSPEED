<div{{attributes}}>
	<div class="my-5 flex justify-center">
		<input type="text" data-model="query" placeholder="Search for a post" class="max-w-screen-sm border-2 rounded-md text-center border-slate-400 p-2 text-slate-500">
	</div>
	{% set posts = this.posts %}
	<div class="grid grid-cols-3 gap-4 m-10">
		{% for item in posts %}
			<a href="{{path('app_show', {'slug': item.slug})}}" class="p-4 bg-slate-100 hover:bg-slate-300 rounded-md">{{item.title}}</a>
		{% endfor %}
	</div>
</div>
